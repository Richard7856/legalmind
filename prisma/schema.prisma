generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id // UUID from Supabase Auth
  email     String   @unique
  name      String?
  role      String   @default("ABOGADO") // Solo ABOGADO por ahora
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  simulations Simulation[]
}

model Case {
  id          String   @id @default(cuid())
  title       String
  description String
  category    String // Penal, Civil, etc.
  difficulty  String // Basic, Intermediate, Advanced
  scenario    String? // The initial context/facts
  caseData    Json? // Additional case data (evidences, witnesses, etc.)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  simulations Simulation[]
}

model Simulation {
  id           String   @id @default(cuid())
  userId       String
  caseId       String
  status       String   @default("IN_PROGRESS") // IN_PROGRESS, COMPLETED
  score        Int?
  caseAccepted Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  case     Case      @relation(fields: [caseId], references: [id], onDelete: Cascade)
  messages Message[]
  feedback Feedback?
}

model Message {
  id           String   @id @default(cuid())
  simulationId String
  role         String // user, system, assistant (or specific legal roles like judge, prosecutor)
  content      String
  createdAt    DateTime @default(now())

  simulation Simulation @relation(fields: [simulationId], references: [id], onDelete: Cascade)
}

model Feedback {
  id           String   @id @default(cuid())
  simulationId String   @unique
  content      String // Structured feedback text
  score        Int
  createdAt    DateTime @default(now())

  simulation Simulation @relation(fields: [simulationId], references: [id], onDelete: Cascade)
}
